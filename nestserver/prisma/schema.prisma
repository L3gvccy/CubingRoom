generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
  moduleFormat  = "cjs" 
}

datasource db {
  provider = "postgresql"
}

enum TimerType {
  KEYBOARD
  TYPING
}

model User {
  id String @id @default(ulid())

  email String? @unique
  password String?
  displayName String
  wcaId String? @unique
  image String?
  countryCode String?
  timerType TimerType @default(KEYBOARD)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}